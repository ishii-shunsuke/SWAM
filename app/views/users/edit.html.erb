<main>

<div class="container-fluid">
	  <div class="text-white">
	  	<h3 class="mypage-title">ユーザー情報の編集</h3>
		<div class="row">
			<div class="col-md-5">
          <div class="form-group">
		 <label for="lastname">姓</label>
		   <input type="text" name="lastname" class="form-control-sm">
		</div>
		<div class="form-group">
		 <label for="firstname">名</label>
		   <input type="text" name="firstname" class="form-control-sm">
		</div>
		<div class="form-group">
		 <label for="lastname-kana">姓(カナ)</label>
		   <input type="text" name="lastname-kana" class="form-control-sm">
		</div>
		<div class="form-group">
		 <label for="firstname-kana">姓(カナ)</label>
		   <input type="text" name="firstname-kana" class="form-control-sm">
		</div>
		<div class="form-group">
		      <label for="post-number">郵便番号</label>
		      <input type="text" name="post-number" class="form-control-sm">
		    </div>
		<div class="form-group">
		      <label for="prefectures">都道府県</label>
		      <select id="inputState" class="form-control-sm">
		        <option selected>選択...</option>
		        <option>...</option>
		      </select>
		    </div>
		    <div class="form-group">
		      <label for="city">市町村</label>
		      <input type="text" name="city" class="form-control-sm">
		    </div>
             <div class="form-group">
		    <label for="block">番地・建物名</label>
		    <input type="text" name="block" class="form-control-sm">
		  </div>
          </div>
		  <div class="col-md-5">
          <div class="form-group">
		 <label for="phonenumber">電話番号</label>
		   <input type="tel" name="phonenumber" class="form-control-sm">
		</div>
		<div class="form-group">
		 <label for="mail-adress">メールアドレス</label>
		   <input type="email" name="mail-adress" class="form-control-sm">
		</div>
		<div class="form-group">
		      <label for="password">パスワード入力</label>
		      <input type="password" name="password" class="form-control-sm">
		    </div>
		<div class="form-group">
		      <label for="password-confirm">パスワード確認</label>
		      <input type="password" name="password-confirm" class="form-control-sm">
		    </div>
           </div>
       </div>
           <div class="row">
           	   <div class="col text-center">
           	<%= link_to "変更を保存",users_edit_path, class: "btn btn-success" %>
           </div>
       </div>

</div>
</div>
</div>
</div>
</main>
