<div class="container">

<div class= title>
<h2 class="text-white">新規会員登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">

  <div class="col-md-6">

    <div class="field text-white ">
    <%= f.label :名前（姓） %><br />
    <%= f.text_field :last_name, autofocus: true%>
    </div>

    <div class="field text-white  ">
      <%= f.label :名前（名） %><br />
      <%= f.text_field :first_name, autofocus: true%>
    </div>

    <div class="field text-white  ">
      <%= f.label :名前（姓・カナ） %><br />
      <%= f.text_field :last_name_kana, autofocus: true%>
    </div>

    <div class="field text-white  ">
      <%= f.label :名前（名・カナ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true%>
    </div>

    <div class="birth_date_field text-white ">
    <%= f.label :生年月日 %>
    <%= f.date_select(:birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1), date_separator: '/') %>
    </div>

    <div class="field text-white  ">
      <%= f.label :性別 %><br />
      <%= f.select :gender, User.genders.keys, {prompt: '選択してください'}, class: 'form-control' %>
    </div>

    <div class="field text-white  ">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :phone_number, autofocus: true%>
    </div>

    <div class="field text-white  ">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

  </div>

  <div class="col-md-6">
    <div class="field text-white">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :post_number, autofocus: true%>
    </div>

    <div class="field text-white">
      <%= f.label :都道府県 %><br />
      <%= f.select :prefectures, User.prefectures.keys, {prompt: '選択してください'}, class: 'form-control'%>
    </div>

    <div class="field text-white">
      <%= f.label :市区町村 %><br />
      <%= f.text_field :city, autofocus: true%>
    </div>

    <div class="field text-white">
      <%= f.label :番地・建物名 %><br />
      <%= f.text_field :block, autofocus: true%>
    </div>

    <div class="field text-white ">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field text-white">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    </div>
</div>
    <div class="actions title text-big">
      <%= f.submit "会員登録" %>
    </div>
  <% end %>
  
</div>