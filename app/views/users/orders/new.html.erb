<main role="main" class="flex-shrink-0">
    <div class="container">
      <h1 class="shipping-title text-white">注文の確認</h1>
      <h5 class="text-white mt-5">商品</h5>
      <table class="table text-white">
		  <thead>
		    <tr>
		      <th scope="col"></th>
		      <th scope="col">商品名</th>
		      <th scope="col">アーティスト名</th>
		      <th scope="col">数量</th>
		      <th scope="col">価格</th>
		    </tr>
		  </thead>
		  <% @carts.each do |cart, product| %>
		  <tbody>
		    <tr>
		      <td><%= attachment_image_tag cart.product,:jacket_image, fallback: "no_image.png", size: '100x100' %></td>
		      <td class="pt-5"><%= cart.product.title %></td>
		      <td class="pt-5"><%= cart.product.artist.artist_name %></td>
		      <td class="pt-5"><%= cart.number %></td>
		      <td class="pt-5"><%= cart.product.price %></td>
		    </tr>
		  </tbody>
		  <% end %>
		  <tfoot>
		  	<tr>
		  		<td></td>
		  		<td></td>
		  		<td>合計</td>
		  		<td><%= cart_number_total(@carts) %></td>
		  		<td><%= cart_total(@carts) %></td>
		  	</tr>
		  </tfoot>
	   </table>

	   <h5 class="text-white">配送先</h5>
	   <table class="table text-white">
		  <thead>
		    <tr>
		      <th scope="col">名前</th>
		      <th scope="col">郵便番号</th>
		      <th scope="col">住所</th>
		    </tr>
		  </thead>
		  <tbody>
		    <tr>
		      <td><%= @shipping_address.last_name + @shipping_address.first_name %></td>
		      <td><%= @shipping_address.post_number %></td>
		      <td><%= full_address(@shipping_address) %></td>
		    </tr>
		  </tbody>
	   </table>
	   <div class="d-flex flex-column">
		   <div class="float-left mt-3">
		   		<button type="button" class="btn btn-danger btn-lg">
		   			<%= link_to "注文を確定する", order_path, method: :post, class:"text-white" %>
		   		</button>
		   </div>
		   <div class="float-left mt-5">
		   		<button type="button" class="btn btn-light mb-5">
		   			<%= link_to "戻る", order_set_address_path, class:"text-dark", data: {"turbolinks" => false} %>
		   		</button>
		   </div>
	   </div>

    </div>
</main>