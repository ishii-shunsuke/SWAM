<main role="main" class="flex-shrink-0">
    <div class="container text-light">
      <div class="bg-light text-dark p-2 cart-title mb-3"><h3>注文の確認</h3></div>
		<div class="row mt-3 pb-4">
			<div class="col-1"></div>
			<div class="col-6 row">
				<h4 class="border-bottom w-75">注文内容</h4>
				<table class="table table-borderless">
					<% @carts.each do |cart| %>
					<tr>
						<td><%= cart.product.title %></td>
						<td>数量 <%= cart.number %></td>
						<td>小計：<%= cart.sum_of_price %> 円</td>
					</tr>
					<% end %>
				</table>
				<h4 class="text-right w-75">合計： <%= cart_total(@carts) %> 円</h4>
				<div class="w-100"><%= link_to "カートに戻る", carts_path, class:"btn btn-info", data: {"turbolinks" => false} %></div>
			</div>
			<div class="col-5">
				<h4 class="border-bottom">配送先</h4>
				<%= full_name(@shipping_address) %><br>
				<span class="ml-4"><%= @shipping_address.post_number %></span><br>
				<span class="ml-4"><%= full_address(@shipping_address) %></span><br>
				<%= link_to "配送先の設定に戻る", order_set_address_path, class:"btn btn-primary mt-5", data: {"turbolinks" => false} %>
			</div>
		</div>
		<div class="text-center"><%= link_to "注文を確定する", order_path, method: :post, class:"btn btn-lg btn-warning mt-5" %></div>
    </div>
</main>