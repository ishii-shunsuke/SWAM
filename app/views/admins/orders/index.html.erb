<div class="container">
    <div class="admin-title">
         <h1 class="text-white">購入履歴一覧</h1>
   <div class="showitem text-white">
	<table class="table-bordered" >
		<tr>
            <th>購入者</th>
            <th>購入日</th>
            <th>購入価格総計</th>
            <th>送付先</th>
            <th>ステータス選択</th>
            <th>ステータス</th>
            <th>シングル/アルバム名</th>
            <th>購入枚数</th>
            <th>小計</th>
        </tr>
        <% @orders.each do |order|%>
            <tr>
            	<td rowspan="<%= order.buy_products.count + 1 %>"><%= order.user.full_name %></td>
            	<td rowspan="<%= order.buy_products.count + 1 %>"><%= order.created_at.strftime('%Y年%m月%d日') %></td>
                <td rowspan="<%= order.buy_products.count + 1 %>"><%= order_total(order) %></td>
                <td rowspan="<%= order.buy_products.count + 1 %>"><%= order.shipping_address %></td>
                <td rowspan="<%= order.buy_products.count + 1 %>">ステータス選択</td>
                <td rowspan="<%= order.buy_products.count + 1 %>"><%= order.shipping_status %></td>
            </tr>
              <% order.buy_products.each do |buy_product| %>
                <tr>
                    <td><%= buy_product.buy_title %></td>
                    <td><%= buy_product.buy_number%><span>枚</span></td>
                    <td><%= buy_product.buy_price%><span>円</span></td>
                </tr>
              <% end %>
        <% end %>
    </table>
    <button type="button" class="btn btn-primary btn-enter mt-4" align="right">ステータスを更新する</button>

<table border="3">
    <tr>
        <td rowspan="3">垂直方向の結合</td>
        <td>データ1</td>
    </tr>
    <tr>
        <td>データ2</td>
    </tr>
    <tr>
        <td>データ3</td>
    </tr>
</table>
</div>
</div>
</div>
