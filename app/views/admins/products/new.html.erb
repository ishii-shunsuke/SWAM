<main role="main" class="flex-shrink-0">
    <div class="container admin-title">
      <h1 class="add-products text-white">商品追加</h1>
         <div class="addditem">
            <%= form_for(@product,:url => {:action => :create}) do |f| %>
    <table class="condensed text-white">
        <tr>
            <td class="text-white">年代</td>
            <td><%= f.select :period,[["1980年代前半","1980年代前半"],["1980年代後半","1980年代後半"],["1990年代前半","1990年代前半"],["1990年代後半","1990年代後半"],["2000年代前半","2000年代前半"],["2000年代後半","2000年代前後半"],["2010年代前半","2010年代前半"],["2010年代後半","2010年代後半"]], :prompt => "選択してください" %></td>

        </tr>

 <tr>
            <td class="text-white">アーティスト</td>
            <td>

                <%= f.fields_for :artists do |artist| %>
                <%= artist.text_field :artist_name %>
                <% end %>


         </td>
        </tr>

<tr>
            <td class="text-white">アルバム/シングル名</td>
            <td> <%= f.text_field :title, class:"product_title mt-4", placeholder:"title"%>

                <!-- <form><input type="text" class="form-control mt-4" id="title"></form> --></td>
        </tr>

        <tr>
            <td class="text-white mt-4">ジャケット画像</td>
            <td><div class="form-group has-icon"><label class="control-label sr-only mt-4" for="inputEmail">JacketImage</label><%= f.attachment_field :jacket_image, placeholder: "ジャケット画像", fallback: "no_image.png", size: '100×100'%></div></td>

        </tr>

        <tr>
            <td class="text-white">値段</td>
            <td><%= f.number_field :price, min:1, max:10000000 %></td><span class="text-white">円</span>
        </tr>

        <tr>
            <td class="text-white">レーベル名</td>
            <td>  <%= f.fields_for :labels do |label| %>
                <%= label.text_field :label_name %></td>
            <% end %>

<!--
            <datalist id="label">
            <option value="TOY'S FACTORY"></option>
            <option value="ワーナーミュージック"></option>
            <option value="エイベックス"></option>
            </datalist> -->
        </tr>

        <tr>
            <td class="text-white">ジャンル</td>
            <td>  <%= f.fields_for :categories do |category| %>
                <%= category.text_field :category_name %></td>
                 <% end %>
        </tr>

        <tr>
            <td class="text-white">曲名</td>
            <td class="text-white">


  <div id="discs">
    <%= f.fields_for :discs do |disc| %>


      <%= render 'disc_fields', f: disc %>

    <% end %>
    <div id="links">

      <%= link_to_add_association 'Disc追加',f, :discs %>
    </div>
  </div>


            </td>
        </tr>


        <tr>
            <td class="text-white">在庫数</td>
            <td><%= f.number_field :price, min:1, max:10000000 %><span class="text-white">枚</span></td>
        </tr>





    </table>
<%= f.submit "商品追加", class:"btn btn-primary btn-enter text-white mb-4" %>
<% end %>

</div>

</div>
</main>