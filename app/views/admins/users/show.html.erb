<main>
	<div class="container">
		<div class="text-white">
			<h3 class="user-title"><%= @user.last_name %>様情報</h3>
			<div class="row">
				 <div class="col-md-8">
                    <div class="form-group">
                         <h4>名前</h4>
                       <%= full_name(@user) %><
                    <div class="form-group">
                         <h4>名(カナ)</h4>
                      <%= @user.last_name_kana+@user.first_name_kana %>
                    </div>
                    <div class="form-group">
                         <h4>郵便番号</h4>
                       <%= @user.post_number %>
                    </div>
                    <div class="form-group">
                         <h4>住所</h4>
                      <%= full_address(@user) %>
                    </div>

                    </div>
                	<div class="form-group">
                         <h4>電話番号</h4>
                       <%= @user.phone_number %>
                    <div class="form-group">
                         <h4>メールアドレス</h4>
                       <%= @user.email %>
                    </div>
                    <div class="form-group">
                         <h4>パスワード</h4>
                       <%= @user.password %>
                <div class="col-md-3">
                    <%= link_to "編集", edit_admins_user_path(@user.id), class: "btn btn-primary" %>
                    </div>
                </div>
                <h3>購入履歴一覧</h3>
                <div class="row">
                    <div class="col text-center">
                        <table class="table-bordered" >
        <tr>
            <td>購入日</td>
            <td>シングル/アルバム名</td>
            <td>購入枚数</td>
            <td>小計</td>
            <td>購入価格総計</td>
            <td>送付先</td>
            <td>ステータス</td>
        </tr>
        <tr>
            <td rowspan="2">1月6日</td>
            <td>HOME</td>
            <td>2枚</td>
            <td>1200円</td>
            <td rowspan="2">2200円</td>
            <td rowspan="2">東京区渋谷神泉</td>
            <td rowspan="2"><button type="button" class="btn btn-success btn-enter">準備中</button></td>
        </tr>
    </table>
           </div>
          </div>
            </div>
		</div>
	</div>
</main>